@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />

        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control me-sm-2 p-2" type="text" placeholder="Enter The New Category Name .."  />
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control me-sm-2 p-2" type="text" placeholder="Enter The New Category Display Order .." />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>


        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">UPDATE</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-primary" style="width:250px">BACK TO LIST</a>

    </div>


</form>

@section Scripts
{
    @{

        <partial name="_ValidationScriptsPartial"></partial>
    }


}

