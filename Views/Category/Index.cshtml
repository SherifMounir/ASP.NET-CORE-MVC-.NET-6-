@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <h2>Index Categories</h2>

    </div>
    <div>
        
      <div class="d-grid gap-2">
            
            <a class="btn btn-lg btn-primary" type="button" asp-controller="Category" asp-action="Create"> &nbsp Create New Category</a>
      </div>
    </div>




<table class="table table-bordered table-striped" style="width:100%"> 
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name;
                </td>
                <td width="30%">
                    @obj.DisplayOrder;
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pen"></i>EDIT</a>

                    </div>
                </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-pen"></i>DELETE</a>

                        </div>
                    </td>
            </tr>
        }
    </tbody>


</table>
</div>

